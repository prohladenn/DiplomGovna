<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/label_serial_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Серийный номер*"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edit_serial_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Введите серийный номер"
        app:layout_constraintTop_toBottomOf="@id/label_serial_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/label_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Наименование устройства"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_serial_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Введите наименование"
        app:layout_constraintTop_toBottomOf="@id/label_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/label_last_service_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Дата последнего обслуживания"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp"/>

    <EditText
        android:id="@+id/edit_last_service_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Выберите дату"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/label_last_service_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/label_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Статус устройства"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_last_service_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp"/>

    <EditText
        android:id="@+id/edit_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Введите статус"
        app:layout_constraintTop_toBottomOf="@id/label_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_save_device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        app:layout_constraintTop_toBottomOf="@id/edit_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
